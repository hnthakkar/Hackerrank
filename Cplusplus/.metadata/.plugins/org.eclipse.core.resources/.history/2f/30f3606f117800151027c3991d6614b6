#include <iostream>
using namespace std;

void printOuterLine(int size){
	cout << "+-";
	while(size--){
		cout << "-";
		cout << "---";
	}
	cout << "--+" << endl;

}

int main(){
	while(true){
		int num1, num2;
		cin >> num1 >> num2;
		if (num1 == 0 && num2 == 0)
			break;
		int len1 = 0, len2 = 0;
		int tmp = num1;
		while(tmp){
			tmp /= 10;
			len1++;
		}
		tmp = num2;
		while (tmp){
			tmp /= 10;
			len2++;
		}
		cout << len1 << ":" << len2 << endl;
		printOuterLine(len1);
		printOuterLine(len1);
	}
	return 0;
}
